<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.restos.controller.CashierDashboardController"
    styleClass="cashier-root"
    stylesheets="@../../css/cashier.css">

    <!-- Left Sidebar -->
    <left>
        <VBox styleClass="cashier-sidebar" spacing="20" prefWidth="220">
            <padding>
                <Insets topRightBottomLeft="20" />
            </padding>

            <!-- Logo -->
            <VBox alignment="CENTER" spacing="5">
                <Label text="ðŸ’° RESTOS" styleClass="sidebar-logo" />
                <Label text="Point of Sale" styleClass="sidebar-subtitle" />
            </VBox>

            <!-- Stats Cards -->
            <VBox spacing="15">
                <VBox styleClass="stats-card,stats-card-pending" spacing="5">
                    <Label fx:id="pendingCountLabel" text="0" styleClass="stats-value" />
                    <Label text="Pending Payments" styleClass="stats-label" />
                </VBox>

                <VBox styleClass="stats-card,stats-card-completed" spacing="5">
                    <Label fx:id="completedCountLabel" text="0" styleClass="stats-value" />
                    <Label text="Completed Today" styleClass="stats-label" />
                </VBox>

                <VBox styleClass="stats-card,stats-card-revenue" spacing="5">
                    <Label fx:id="todayRevenueLabel" text="Rp 0" styleClass="stats-value" />
                    <Label text="Today's Revenue" styleClass="stats-label" />
                </VBox>
            </VBox>

            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS" />

            <!-- User Info -->
            <VBox styleClass="user-info" spacing="5">
                <Label fx:id="userNameLabel" text="Cashier Name" styleClass="user-name" />
                <Label fx:id="userRoleLabel" text="Cashier" styleClass="user-role" />
                <Button text="Logout" styleClass="logout-btn" onAction="#handleLogout" />
            </VBox>
        </VBox>
    </left>

    <!-- Center Content -->
    <center>
        <VBox spacing="0">
            <!-- Header -->
            <HBox styleClass="content-header" alignment="CENTER_LEFT" spacing="20">
                <Label text="Pending Payments" styleClass="page-title" />

                <Region HBox.hgrow="ALWAYS" />

                <!-- Search -->
                <HBox styleClass="search-box" alignment="CENTER_LEFT" spacing="10">
                    <Label text="ðŸ”" />
                    <TextField fx:id="searchField" styleClass="search-field"
                        promptText="Search table, waiter, order ID..." prefWidth="200" />
                </HBox>

                <!-- Refresh Button -->
                <Button text="ðŸ”„ Refresh" styleClass="refresh-btn" onAction="#refreshData" />
            </HBox>

            <!-- Order List -->
            <VBox VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="0" right="30" bottom="30" left="30" />
                </padding>

                <VBox styleClass="order-list-container" VBox.vgrow="ALWAYS">
                    <Label text="Orders Ready for Payment" styleClass="section-title" />

                    <ScrollPane fx:id="orderScrollPane" styleClass="order-scroll"
                        fitToWidth="true" VBox.vgrow="ALWAYS">
                        <VBox fx:id="orderListContainer" spacing="10">
                            <!-- Order rows will be added dynamically -->
                        </VBox>
                    </ScrollPane>
                </VBox>
            </VBox>
        </VBox>
    </center>

    <!-- Right Panel - Payment -->
    <right>
        <VBox fx:id="paymentPanel" styleClass="payment-panel" spacing="15" prefWidth="400">
            <padding>
                <Insets topRightBottomLeft="20" />
            </padding>

            <!-- Panel Title -->
            <Label text="ðŸ’³ Process Payment" styleClass="panel-title" />

            <!-- Order Detail Container -->
            <VBox fx:id="orderDetailContainer" spacing="15" visible="true" managed="true">

                <!-- Order Header -->
                <VBox styleClass="order-detail-header" spacing="8">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Order" styleClass="order-detail-label" />
                        <Label fx:id="selectedOrderIdLabel" text="#0"
                            styleClass="order-detail-value"
                            style="-fx-font-size: 18px; -fx-text-fill: #F97316;" />

                        <Region HBox.hgrow="ALWAYS" />

                        <Label fx:id="selectedTableLabel" text="Table 0"
                            styleClass="order-detail-value" />
                    </HBox>

                    <HBox spacing="20">
                        <VBox spacing="2">
                            <Label text="Waiter" styleClass="order-detail-label" />
                            <Label fx:id="selectedWaiterLabel" text="-"
                                styleClass="order-detail-value" />
                        </VBox>
                        <VBox spacing="2">
                            <Label text="Time" styleClass="order-detail-label" />
                            <Label fx:id="selectedTimeLabel" text="-"
                                styleClass="order-detail-value" />
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Items List -->
                <VBox spacing="5">
                    <Label text="Items"
                        style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #374151;" />
                    <ScrollPane fitToWidth="true" maxHeight="180" styleClass="order-scroll">
                        <VBox fx:id="itemListContainer" spacing="0">
                            <!-- Items will be added dynamically -->
                        </VBox>
                    </ScrollPane>
                </VBox>

                <!-- Summary -->
                <VBox styleClass="summary-section" spacing="8">
                    <HBox alignment="CENTER_LEFT">
                        <Label text="Subtotal" styleClass="summary-label" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="subtotalLabel" text="Rp 0" styleClass="summary-value" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT">
                        <Label text="TOTAL" styleClass="total-label" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="totalLabel" text="Rp 0" styleClass="total-value" />
                    </HBox>
                </VBox>

                <!-- Payment Method -->
                <VBox spacing="8">
                    <Label text="Payment Method"
                        style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #374151;" />
                    <HBox fx:id="paymentMethodContainer" spacing="10" alignment="CENTER">
                        <VBox styleClass="payment-method-btn,payment-method-btn-selected"
                            alignment="CENTER" spacing="5" userData="cash"
                            onMouseClicked="#selectCash">
                            <Label text="ðŸ’µ" styleClass="method-icon" />
                            <Label text="Cash" styleClass="method-label" />
                        </VBox>
                        <VBox styleClass="payment-method-btn"
                            alignment="CENTER" spacing="5" userData="qris"
                            onMouseClicked="#selectQris">
                            <Label text="ðŸ“±" styleClass="method-icon" />
                            <Label text="QRIS" styleClass="method-label" />
                        </VBox>
                        <VBox styleClass="payment-method-btn"
                            alignment="CENTER" spacing="5" userData="debit"
                            onMouseClicked="#selectDebit">
                            <Label text="ðŸ’³" styleClass="method-icon" />
                            <Label text="Debit" styleClass="method-label" />
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Amount Input -->
                <VBox spacing="8">
                    <Label text="Amount Paid" styleClass="amount-label" />
                    <TextField fx:id="amountPaidField" styleClass="amount-input"
                        promptText="Enter amount..." />

                    <!-- Quick Amount Buttons -->
                    <HBox fx:id="quickAmountContainer" spacing="8" alignment="CENTER">
                        <!-- Buttons will be added dynamically -->
                    </HBox>
                </VBox>

                <!-- Change Display -->
                <VBox fx:id="changeContainer" styleClass="change-container" alignment="CENTER"
                    spacing="5">
                    <Label text="Change" styleClass="change-label" />
                    <Label fx:id="changeLabel" text="Rp 0" styleClass="change-value" />
                </VBox>

                <!-- Action Buttons -->
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Cancel" styleClass="cancel-btn" onAction="#cancelSelection" />
                    <Button fx:id="processPaymentBtn" text="âœ“ Process Payment"
                        styleClass="process-btn" onAction="#processPayment" disable="true"
                        HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                </HBox>
            </VBox>
        </VBox>
    </right>

</BorderPane>