<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.restos.controller.LoginController"
    styleClass="login-container"
    stylesheets="@../css/main.css, @../css/login.css">

    <!-- Login Card -->
    <VBox styleClass="login-card" alignment="CENTER" spacing="24">

        <!-- Logo Section -->
        <VBox alignment="CENTER" spacing="8">
            <Label text="ðŸ½ï¸" style="-fx-font-size: 56px;" />
            <Label text="RESTOS" styleClass="login-logo" />
            <Label text="Restaurant Point of Sale" styleClass="login-subtitle" />
        </VBox>

        <!-- Spacer -->
        <VBox prefHeight="16" />

        <!-- Form Section -->
        <VBox spacing="16" alignment="CENTER">

            <!-- Username Field -->
            <VBox spacing="6" alignment="CENTER_LEFT">
                <Label text="Username" style="-fx-font-weight: bold; -fx-text-fill: #374151;" />
                <TextField fx:id="usernameField"
                    promptText="Masukkan username"
                    styleClass="login-field"
                    prefWidth="320" />
            </VBox>

            <!-- Password Field -->
            <VBox spacing="6" alignment="CENTER_LEFT">
                <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: #374151;" />
                <PasswordField fx:id="passwordField"
                    promptText="Masukkan password"
                    styleClass="login-field"
                    prefWidth="320"
                    onAction="#handleLogin" />
            </VBox>

            <!-- Error Message -->
            <Label fx:id="errorLabel"
                styleClass="login-error"
                visible="false"
                managed="false" />

        </VBox>

        <!-- Spacer -->
        <VBox prefHeight="8" />

        <!-- Login Button -->
        <StackPane>
            <Button fx:id="loginButton"
                text="Masuk"
                styleClass="login-btn"
                onAction="#handleLogin"
                prefWidth="320" />
            <ProgressIndicator fx:id="loadingIndicator"
                prefWidth="24"
                prefHeight="24"
                visible="false"
                managed="false" />
        </StackPane>

        <!-- Footer -->
        <VBox alignment="CENTER" spacing="4">
            <VBox prefHeight="16" />
            <Label text="Â© 2026 Restos - Restaurant POS System" styleClass="login-footer" />
            <Label text="Version 1.0.0" styleClass="login-footer" />
        </VBox>

    </VBox>

</StackPane>