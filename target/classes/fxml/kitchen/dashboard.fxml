<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.restos.controller.KitchenDashboardController"
    stylesheets="@../../css/main.css,@../../css/dashboard.css,@../../css/kitchen.css">

    <!-- Left Sidebar -->
    <left>
        <VBox prefWidth="240" styleClass="sidebar" spacing="0">
            <padding>
                <Insets bottom="20" left="0" right="0" top="20" />
            </padding>

            <!-- Logo Section -->
            <VBox alignment="CENTER" spacing="4" styleClass="sidebar-header">
                <padding>
                    <Insets bottom="0" left="16" right="16" top="0" />
                </padding>
                <Label text="ðŸ½ï¸" style="-fx-font-size: 32px;" />
                <Label text="RESTOS" styleClass="sidebar-logo" />
                <Label text="Kitchen Display" styleClass="sidebar-subtitle" />
            </VBox>

            <VBox prefHeight="24" />

            <!-- Filter Buttons -->
            <VBox spacing="4" styleClass="nav-menu">
                <padding>
                    <Insets bottom="0" left="12" right="12" top="0" />
                </padding>

                <Button fx:id="filterAll" text="ðŸ“‹  Semua Pesanan"
                    styleClass="nav-btn,nav-btn-active"
                    onAction="#showAllOrders" maxWidth="Infinity" alignment="CENTER_LEFT" />
                <Button fx:id="filterPending" text="â³  Pending" styleClass="nav-btn"
                    onAction="#showPendingOrders" maxWidth="Infinity" alignment="CENTER_LEFT" />
                <Button fx:id="filterCooking" text="ðŸ”¥  Dimasak" styleClass="nav-btn"
                    onAction="#showCookingOrders" maxWidth="Infinity" alignment="CENTER_LEFT" />
                <Button fx:id="filterServed" text="âœ…  Siap Antar" styleClass="nav-btn"
                    onAction="#showServedOrders" maxWidth="Infinity" alignment="CENTER_LEFT" />
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <!-- Stats Summary -->
            <VBox spacing="8" styleClass="sidebar-stats">
                <padding>
                    <Insets bottom="16" left="16" right="16" top="16" />
                </padding>
                <Separator />
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="â³" style="-fx-font-size: 18px;" />
                    <VBox>
                        <Label text="Pending" style="-fx-text-fill: #6b7280; -fx-font-size: 11px;" />
                        <Label fx:id="pendingCountLabel" text="0" style="-fx-font-weight: bold;" />
                    </VBox>
                </HBox>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="ðŸ”¥" style="-fx-font-size: 18px;" />
                    <VBox>
                        <Label text="Dimasak" style="-fx-text-fill: #6b7280; -fx-font-size: 11px;" />
                        <Label fx:id="cookingCountLabel" text="0" style="-fx-font-weight: bold;" />
                    </VBox>
                </HBox>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="âœ…" style="-fx-font-size: 18px;" />
                    <VBox>
                        <Label text="Siap Antar"
                            style="-fx-text-fill: #6b7280; -fx-font-size: 11px;" />
                        <Label fx:id="servedCountLabel" text="0" style="-fx-font-weight: bold;" />
                    </VBox>
                </HBox>
            </VBox>

            <!-- User Info -->
            <VBox styleClass="sidebar-footer" spacing="12">
                <padding>
                    <Insets bottom="12" left="16" right="16" top="12" />
                </padding>
                <Separator />
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Label fx:id="avatarLabel" text="K" styleClass="avatar-text"
                        style="-fx-background-color: #EF4444; -fx-background-radius: 20; -fx-min-width: 40; -fx-min-height: 40; -fx-alignment: center; -fx-text-fill: white; -fx-font-weight: bold;" />
                    <VBox spacing="2">
                        <Label fx:id="userNameLabel" text="Kitchen Staff" styleClass="user-name" />
                        <Label fx:id="userRoleLabel" text="Dapur" styleClass="user-role" />
                    </VBox>
                </HBox>
                <Button text="ðŸšª  Keluar" styleClass="nav-btn,logout-btn" onAction="#handleLogout"
                    maxWidth="Infinity" alignment="CENTER_LEFT" />
            </VBox>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="0" styleClass="main-content">
            <padding>
                <Insets top="24" right="32" bottom="24" left="32" />
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="16" styleClass="content-header">
                <VBox HBox.hgrow="ALWAYS">
                    <Label fx:id="pageTitle" text="Kitchen Display System" styleClass="heading-1" />
                    <Label fx:id="pageSubtitle" text="Kelola pesanan dapur" styleClass="subtitle" />
                </VBox>
                <HBox spacing="12" alignment="CENTER_RIGHT">
                    <Label fx:id="dateTimeLabel" text="Senin, 17 Jan 2026 - 10:00"
                        styleClass="datetime-label" />
                    <Button text="ðŸ”„ Refresh" styleClass="btn,btn-secondary"
                        onAction="#handleRefresh" />
                </HBox>
            </HBox>

            <VBox prefHeight="24" />

            <!-- Order Queue -->
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                style="-fx-background-color: transparent;">
                <FlowPane fx:id="orderCardsContainer" hgap="20" vgap="20" alignment="TOP_LEFT">
                    <padding>
                        <Insets top="8" right="8" bottom="16" left="0" />
                    </padding>
                </FlowPane>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>