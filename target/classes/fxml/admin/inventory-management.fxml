<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.restos.controller.InventoryManagementController"
    styleClass="management-page">

    <!-- Header -->
    <top>
        <VBox spacing="16" styleClass="page-header">
            <padding>
                <Insets bottom="16" left="24" right="24" top="16" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="16">
                <Label text="ðŸ“¦ Kelola Inventaris" styleClass="page-title" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="ðŸ”„ Reset Stok Harian" styleClass="btn,btn-warning"
                    onAction="#handleResetDailyStock" />
                <Button text="+ Tambah Stok" styleClass="btn,btn-primary"
                    onAction="#handleAddInventory" />
            </HBox>

            <!-- Filters -->
            <HBox spacing="12" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="ðŸ” Cari menu..."
                    prefWidth="300" onKeyReleased="#handleSearch" styleClass="search-field" />

                <ComboBox fx:id="categoryFilter" promptText="Semua Kategori"
                    onAction="#handleCategoryFilter" prefWidth="180" />

                <ComboBox fx:id="stockFilter" promptText="Semua Stok"
                    onAction="#handleStockFilter" prefWidth="150" />

                <Region HBox.hgrow="ALWAYS" />

                <Button text="ðŸ”„ Refresh" styleClass="btn,btn-secondary" onAction="#handleRefresh" />
            </HBox>
        </VBox>
    </top>

    <!-- Main Content - Inventory Table -->
    <center>
        <VBox spacing="0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="16" left="24" right="24" top="0" />
            </padding>

            <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS" styleClass="data-table">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"
                        style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colMenuName" text="Nama Menu" prefWidth="250" />
                    <TableColumn fx:id="colCategory" text="Kategori" prefWidth="120" />
                    <TableColumn fx:id="colDailyStock" text="Stok Harian" prefWidth="100"
                        style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colRemainingStock" text="Sisa Stok" prefWidth="100"
                        style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colSold" text="Terjual" prefWidth="80"
                        style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100"
                        style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colActions" text="Aksi" prefWidth="150"
                        style="-fx-alignment: CENTER;" />
                </columns>
                <placeholder>
                    <Label text="Tidak ada data inventaris" />
                </placeholder>
            </TableView>
        </VBox>
    </center>

    <!-- Footer Stats -->
    <bottom>
        <HBox spacing="24" alignment="CENTER_LEFT" styleClass="stats-footer">
            <padding>
                <Insets bottom="16" left="24" right="24" top="16" />
            </padding>
            <Label fx:id="totalItemLabel" text="Total: 0 item" />
            <Label fx:id="lowStockLabel" text="âš ï¸ Stok Rendah: 0" style="-fx-text-fill: #f97316;" />
            <Label fx:id="outOfStockLabel" text="âŒ Habis: 0" style="-fx-text-fill: #ef4444;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lastUpdateLabel" text="Terakhir diupdate: -" />
        </HBox>
    </bottom>
</BorderPane>