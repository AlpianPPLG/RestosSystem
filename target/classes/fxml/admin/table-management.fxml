<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.restos.controller.TableManagementController"
    spacing="20"
    stylesheets="@../../css/main.css, @../../css/dashboard.css">

    <!-- Header with Search and Add Button -->
    <HBox alignment="CENTER_LEFT" spacing="16" styleClass="management-header">
        <TextField fx:id="searchField"
            promptText="ðŸ” Cari meja..."
            styleClass="search-field"
            onKeyReleased="#handleSearch" />

        <ComboBox fx:id="statusFilter"
            promptText="Semua Status"
            prefWidth="180"
            onAction="#handleStatusFilter" />

        <Region HBox.hgrow="ALWAYS" />

        <Button text="âž• Tambah Meja"
            styleClass="btn, btn-primary"
            onAction="#handleAddTable" />
    </HBox>

    <!-- Table Grid View -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="card">
        <FlowPane fx:id="tableGrid"
            hgap="16" vgap="16"
            alignment="TOP_LEFT"
            prefWrapLength="800">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8" />
            </padding>
        </FlowPane>
    </ScrollPane>

    <!-- Footer Stats -->
    <HBox alignment="CENTER_LEFT" spacing="24">
        <Label fx:id="totalTableLabel" text="Total: 0 meja" styleClass="text-secondary" />
        <Label fx:id="availableLabel" text="Tersedia: 0" style="-fx-text-fill: #22c55e;" />
        <Label fx:id="occupiedLabel" text="Terisi: 0" style="-fx-text-fill: #ef4444;" />
        <Label fx:id="reservedLabel" text="Dipesan: 0" style="-fx-text-fill: #f97316;" />
    </HBox>

</VBox>