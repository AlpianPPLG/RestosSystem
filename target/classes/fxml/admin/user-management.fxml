<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.restos.controller.UserManagementController"
    styleClass="management-page">

    <!-- Header -->
    <top>
        <VBox spacing="16" styleClass="page-header">
            <padding>
                <Insets bottom="16" left="24" right="24" top="16" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="16">
                <Label text="ðŸ‘¥ Kelola Pengguna" styleClass="page-title" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="+ Tambah User" styleClass="btn,btn-primary" onAction="#handleAddUser" />
            </HBox>

            <!-- Filters -->
            <HBox spacing="12" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="ðŸ” Cari nama atau email..."
                    prefWidth="300" onKeyReleased="#handleSearch" styleClass="search-field" />

                <ComboBox fx:id="roleFilter" promptText="Semua Role"
                    onAction="#handleRoleFilter" prefWidth="150" />

                <ComboBox fx:id="statusFilter" promptText="Semua Status"
                    onAction="#handleStatusFilter" prefWidth="150" />

                <Region HBox.hgrow="ALWAYS" />

                <Button text="ðŸ”„ Refresh" styleClass="btn,btn-secondary" onAction="#handleRefresh" />
            </HBox>
        </VBox>
    </top>

    <!-- Main Content - User Table -->
    <center>
        <VBox spacing="0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="16" left="24" right="24" top="0" />
            </padding>

            <TableView fx:id="userTable" VBox.vgrow="ALWAYS" styleClass="data-table">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"
                        style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colName" text="Nama" prefWidth="180" />
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="200" />
                    <TableColumn fx:id="colPhone" text="Telepon" prefWidth="130" />
                    <TableColumn fx:id="colRole" text="Role" prefWidth="100"
                        style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100"
                        style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colCreatedAt" text="Terdaftar" prefWidth="120" />
                    <TableColumn fx:id="colActions" text="Aksi" prefWidth="150"
                        style="-fx-alignment: CENTER;" />
                </columns>
                <placeholder>
                    <Label text="Tidak ada data pengguna" />
                </placeholder>
            </TableView>
        </VBox>
    </center>

    <!-- Footer Stats -->
    <bottom>
        <HBox spacing="24" alignment="CENTER_LEFT" styleClass="stats-footer">
            <padding>
                <Insets bottom="16" left="24" right="24" top="16" />
            </padding>
            <Label fx:id="totalUserLabel" text="Total: 0 pengguna" />
            <Label fx:id="adminCountLabel" text="Admin: 0" />
            <Label fx:id="kasirCountLabel" text="Kasir: 0" />
            <Label fx:id="waiterCountLabel" text="Pelayan: 0" />
            <Label fx:id="chefCountLabel" text="Chef: 0" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="activeCountLabel" text="Aktif: 0" />
            <Label fx:id="inactiveCountLabel" text="Non-Aktif: 0" />
        </HBox>
    </bottom>
</BorderPane>